###################################################################################################
# options setings {{{
###################################################################################################

workspace_auto_back_and_forth yes
floating_modifier $mod

# Experimental gaps stuff
smart_gaps off
# smart_gaps on|off|inverse_outer
gaps inner 10
gaps top 40
gaps left 260
gaps bottom 170
gaps right 440

smart_borders no_gaps
hide_edge_borders smart_no_gaps

# Provide window class to float above tiled windows
floating_maximum_size -1 x -1

default_border pixel 4
default_floating_border pixel 2

popup_during_fullscreen smart

# window focus follows your mouse movements as the mouse crosses window borders
focus_follows_mouse no

# dont move cursor when switching to another monitor
mouse_warping none

# Hiding borders adjacent to the screen edges.
# The "smart" setting hides borders on workspaces with only one window visible.
hide_edge_borders smart

focus_on_window_activation focus

tiling_drag modifier

workspace_layout tabbed

