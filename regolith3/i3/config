###################################################################################################
# modes {{{
###################################################################################################

set $resize_value 5
set $mode_resize "Resize (L) (H) (J) (K)"
mode $mode_resize {
        bindsym h resize shrink width $resize_value px or $resize_value ppt
        bindsym j resize grow height $resize_value px or $resize_value ppt
        bindsym k resize shrink height $resize_value px or $resize_value ppt
        bindsym l resize grow width $resize_value px or $resize_value ppt

        bindsym Left resize shrink width $resize_value px or $resize_value ppt
        bindsym Down resize grow height $resize_value px or $resize_value ppt
        bindsym Up resize shrink height $resize_value px or $resize_value ppt
        bindsym Right resize grow width $resize_value px or $resize_value ppt

        bindsym Return mode "default"
        bindsym Escape mode "default"
}
bindsym $mod+r mode $mode_resize

set $mode_poweroff "(E)xit, (P)oweroff, (R)eboot, lo(G)out, (L)oc(K) screen, (S)uspend"
mode $mode_poweroff {
	bindsym $mod+g exec i3-msg exit
	bindsym $mod+p exec systemctl poweroff
	bindsym $mod+r exec systemctl reboot
	bindsym $mod+s mode "default" ; exec systemctl suspend
	bindsym $mod+k mode "default" ; exec $HOME/.i3/i3lock.sh
	bindsym $mod+l mode "default" ; exec $HOME/.i3/i3lock.sh

# back to normal: Enter or Escape
	bindsym Return mode "default"
	bindsym Escape mode "default"
}
bindsym $mod+Shift+e mode $mode_poweroff


# Move workspace to another monitor
set $mode_move_workspace "Move workspace to another monitor"
mode $mode_move_workspace {
    bindsym $mod+1 workspace number 1
    bindsym $mod+2 workspace number 2
    bindsym $mod+3 workspace number 3
    bindsym $mod+4 workspace number 4
    bindsym $mod+5 workspace number 5
    bindsym $mod+6 workspace number 6
    bindsym $mod+7 workspace number 7
    bindsym $mod+8 workspace number 8
    bindsym $mod+9 workspace number 9
    bindsym $mod+0 workspace number 10
    bindsym $mod+Shift+l move workspace to output right; focus output left
    bindsym $mod+Shift+h move workspace to output left; focus output right
    bindsym $mod+Shift+j move workspace to output next; focus output prev
    bindsym $mod+Shift+k move workspace to output prev; focus output next
    bindsym $mod+h focus output left
    bindsym $mod+j focus output down
    bindsym $mod+k focus output up
    bindsym $mod+l focus output right

    # back to normal: Enter or Escape
    bindsym Return mode "default"
    bindsym Escape mode "default"
}
bindsym $mod+Shift+m mode $mode_move_workspace 

# Gaps
set $mode_gaps "GAPS: h j k l"
set $mode_gaps_left "GAPS: LEFT: h - l"
set $mode_gaps_top "GAPS: TOP: j - k"
set $mode_gaps_right "GAPS: RIGHT: h - l"
set $mode_gaps_bottom "GAPS: BOTTOM: j - k"
mode $mode_gaps {
    bindsym h mode $mode_gaps_left
    bindsym j mode $mode_gaps_bottom
    bindsym k mode $mode_gaps_top
    bindsym l mode $mode_gaps_right
    bindsym Return mode "default"
    bindsym Escape mode "default"
}
mode $mode_gaps_left {
    bindsym h gaps left current minus 5
    bindsym l gaps left current plus 5
    bindsym Return mode $mode_gaps
    bindsym Escape mode $mode_gaps
}
mode $mode_gaps_right {
    bindsym l gaps right current minus 5
    bindsym h gaps right current plus 5
    bindsym Return mode $mode_gaps
    bindsym Escape mode $mode_gaps
}
mode $mode_gaps_top {
    bindsym k gaps top current minus 5
    bindsym j gaps top current plus 5
    bindsym Return mode $mode_gaps
    bindsym Escape mode $mode_gaps
}
mode $mode_gaps_bottom {
    bindsym j gaps bottom current minus 5
    bindsym k gaps bottom current plus 5
    bindsym Return mode $mode_gaps
    bindsym Escape mode $mode_gaps
}
bindsym $mod+Shift+g mode $mode_gaps

###################################################################################################
# modes }}}
