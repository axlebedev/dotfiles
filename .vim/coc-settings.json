{
    "suggest.noselect": true,
    "suggest.timeout": 500,
    "suggest.minTriggerInputLength": 1,

    "tsserver.enable": true,
    "tsserver.useIncrementalFileWatcher": true,
    "tsserver.watchOptions": {
        "watchFile": "useFsEvents",
        "watchDirectory": "useFsEvents",
        "fallbackPolling": "dynamicPriority"
    },

    "diagnostic.displayByAle": true,
    "diagnostic.virtualText": true,
    "diagnostic.virtualTextCurrentLineOnly": false,

    "ccls.enabled": false,
    "languageserver": {
        "ccls": {
            "command": "ccls",
            "filetypes": ["cpp", "c", "objc", "objcpp"],
            "rootPatterns": [".ccls", "compile_commands.json", ".git/", ".vim/"],
            "initializationOptions": {
                "cache": {
                    "directory": "/tmp/ccls-cache" 
                },
                "highlight": { "lsRanges": true } 
            }
        }
    },
    "clangd.enabled": true,
    "clangd.path": "~/.config/coc/extensions/coc-clangd-data/install/19.1.2/clangd_19.1.2/bin/clangd",
    "clangd.arguments": [
        "--query-driver=/usr/bin/clang++",
        "--header-insertion=never",
        "--background-index",
        "--all-scopes-completion",
        "--completion-style=detailed",
        "--fallback-style=llvm",
        "--pch-storage=memory",
        "--offset-encoding=utf-16",
        "--clang-tidy",
        "--enable-config"
    ],

    "coc.preferences.useQuickfixForLocations": true,
    "coc.preferences.noselect": true,

    "outline.autoPreview": false,
    "outline.autoHide": false,
    "outline.expandLevel": 1,
    "outline.autoWidth": true,
    "outline.checkBufferSwitch": true,
    "outline.followCursor": true,
    "outline.keepWindow": true,
    "outline.previewBorder": true,
    "outline.previewBorderRounded": true,
    "outline.showLineNumber": true,
    "outline.splitCommand": "leftabove 30vs",
    "outline.sortBy": "position",

    "callHierarchy.enableTooltip": true,

    "codeLens.enable": false,

    "semanticTokens.enable": true,

    "explorer.previewAction.onHover": false,

    "git.virtualTextPrefix": " ",
    "git.branchCharacter": "Ôêò",
    "git.addedSign.hlGroup": "GitSignsAdd",
    "git.changedSign.hlGroup": "GitSignsChange",
    "git.removedSign.hlGroup": "GitSignsDelete",
    "git.changeRemovedSign.hlGroup": "GitSignsDelete",
    "git.topRemovedSign.hlGroup": "GitSignsDelete",

    "typescript.format.insertSpaceAfterOpeningAndBeforeClosingEmptyBraces": true,
    "typescript.format.insertSpaceAfterOpeningAndBeforeClosingNonemptyBraces": true,

    "importCost.typescriptExtensions": [ "\\.tsx?$" ],
    "importCost.javascriptExtensions": [ "\\.jsx?$" ],
    "javascript.preferGoToSourceDefinition": true,
    "javascript.updateImportsOnFileMove.enabled": true,

    "eslint.options": "--rule 'notice/notice: off'",

    "cssmodules.hintName": "css",
}
