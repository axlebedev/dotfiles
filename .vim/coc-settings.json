{
    "suggest.noselect": true,
    "suggest.timeout": 500,
    "suggest.minTriggerInputLength": 1,

    "diagnostic.displayByAle": true,
    "diagnostic.virtualText": true,
    "diagnostic.virtualTextCurrentLineOnly": false,

    "languageserver": {
        "ccls": {
            "command": "ccls",
            "filetypes": ["c", "cc", "cpp", "c++", "objc", "objcpp"],
            "rootPatterns": [".ccls", "compile_commands.json", ".git/", ".hg/"],
            "initializationOptions": {
                "cache": {
                    "directory": "/tmp/ccls"
                },
                "highlight": { "lsRanges" : true }
            }
        }
    },

    "clangd.path": "~/.config/coc/extensions/coc-clangd-data/install/18.1.3/clangd_18.1.3/bin/clangd",

    "coc.preferences.useQuickfixForLocations": true,
    "coc.preferences.noselect": true,

    "outline.autoPreview": false,
    "outline.autoHide": false,
    "outline.expandLevel": 0,
    "outline.autoWidth": true,
    "outline.checkBufferSwitch": true,
    "outline.followCursor": true,
    "outline.keepWindow": true,
    "outline.previewBorder": true,
    "outline.previewBorderRounded": true,
    "outline.showLineNumber": true,
    "outline.splitCommand": "leftabove 30vs",
    "outline.sortBy": "position",

    "callHierarchy.enableTooltip": true,

    "codeLens.enable": true,

    "semanticTokens.enable": true,

    "explorer.previewAction.onHover": false,

    "git.virtualTextPrefix": " ",
    "git.branchCharacter": "",
    "git.addedSign.text": "•",

    "importCost.typescriptExtensions": [ "\\.tsx?$" ],
    "importCost.javascriptExtensions": [ "\\.jsx?$" ],
    "javascript.preferGoToSourceDefinition": true,

    "eslint.options": "--rule 'notice/notice: off'",

    "cssmodules.hintName": "css",
}
